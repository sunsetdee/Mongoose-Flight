<%- include('../partials/header') %>
  <table>
    <thead>
      <tr>
        <th class="show2">Flight:</th>
        <th class="show2">Airport:</th>
        <th class="show2">Flight Number:</th>
        <th class="show2">Departs:</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="show3"><%= flight.airline %></td>
        <td class="show3"><%= flight.airport %></td>
        <td class="show3"><%= flight.flightNo %></td>
        <td class="show3"><%= flight.departs %></td>
      </tr>
    </tbody>
  </table>

  
  <% if (flight.destinations.length) { %>
    <table>
        <thead>
            <tr>
                <th class="show4">Airport</th>
                <th class="show4">Arrival</th>
            </tr>
        </thead>
        <tbody>
            <% flight.destinations.forEach(function(f) { %> 
                <tr>
                    <td class="show1"><%= f.airport %></td>
                    <td class="show1"><%= f.arrival %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <h5 class="show1">No Destination Yet</h5>
            <% } %>
        
        <table>
          <thead>
            <tr>
                <th class="show5">Seat</th>
                <th class="show5">Price</th>
            </tr>
        </thead>
          <tbody>
            <% tickets.forEach(function(t) { %>
              <tr>
                <td class="show6"><%= t.seat %></td>
                <td class="show6"><%= t.price %></td>
              </tr>
              <% }); %>
          </tbody>
        </table>
        <a class="show7" href="/flights/<%= flight._id %>/tickets/new">Add Ticket</a>
            <br><br><h2 class="show8">Add Destination</h2>
          <form id="add-review-form" method="POST" action="/flights/<%= flight._id %>/destinations">
            <label>Airport Code:</label>
            <select name="airport">
              <option value="AUS">AUS</option>
              <option value="DFW">DFW</option>
              <option value="DEN">DEN</option>
              <option value="LAX">LAX</option>
              <option value="SAN" selected>SAN</option>
            </select>
            <label>Arrival
              <input type="date" required name="arrival">
            </label>
            <input type="submit" value="Add Destination">
          </form>


          
